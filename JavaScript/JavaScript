// Criando uma função 
function soma(num1, num2){
    return num1 + num2;
}
// Criando uma funcão e aplicando condição
function division(num1, num2){
	if(num1 > num2){
    alert(num1 + " É maiolr!");	
	}else{
	alert(num2 + " É maior!");
    }
}
// Criando uma função de verificação
function par(num1){
    if(num1 % 2 == 0){
        alert("É PAR!");
    }else{
        alert("É IMPAR!");
    }
}
// Como realizar um if no JavaScript
var nomeUsuario = "Victor"; // declarando variável
var mensagem = ""; // declarando variável string 

if(nomeUsuario == "Laura"){ 
	mensagem = "Nome igual"; //
}else{
	mensagem = "Nome diferente" // 
}

document.write(mensagem); // imprimindo na tela (DOM)
document.bgColor = "green"; // mudando cor de fundo da tela

// Exemplo de while com manipulação do (DOM)
var count = 0;

while(count <= 10){
	document.write(count); // imprimindo no navegador a variável
	count++;
}
// DO while com manipulação do DOM 
var count = 0; // Iniciando a variável do tipo number 
do{
	document.write(count); // Imprimindo no navegador a variável count
	count++;
}while(count <= 10);
10
// Criando um for 
for(var i = 0; i <= 10; i++){
    document.write("Victor");
}

